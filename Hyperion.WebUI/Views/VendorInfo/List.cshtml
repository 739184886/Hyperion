@model IEnumerable<Hyperion.Core.DL.VendorInfo>

@{
    ViewBag.Title = "厂家列表";
}

<!-- BEGIN PAGE HEAD-->
<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            @ViewBag.Title
            <small></small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="@Url.Action("Index", new { controller = "Home" })">主页</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">厂家管理</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span class="active">@ViewBag.Title</span>
    </li>
</ul>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>厂家列表
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="" class="fullscreen"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" style="width: 100%;" id="vendor-table">
                    <thead>
                        <tr>
                            <th class="all">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="all">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="all">
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Details", new { controller = "VendorInfo", id = item.Id })" data-target="#ajax-modal" data-toggle="modal"> 查看 </a>
                                    <a class="btn btn-sm yellow-casablanca" href="@Url.Action("Edit", new { controller = "VendorInfo", id = item.Id })"> 编辑 </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <hr />
                <p>
                    <a class="btn btn-primary" href="@Url.Action("Create", new { controller = "VendorInfo" })">添加厂家</a>
                </p>
            </div>
        </div>

    </div>
</div>

<!--DOC: Aplly "modal-cached" class after "modal" class to enable ajax content caching-->
<div class="modal fade" id="ajax-modal" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <img src="/assets/global/img/loading-spinner-grey.gif" alt="" class="loading">
                <span> &nbsp;&nbsp;Loading... </span>
            </div>
        </div>
    </div>
</div>
<!-- /.modal -->

<div id="vendor-app">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue-hoki">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>厂家列表
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="" class="fullscreen"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover dt-responsive" style="width: 100%;" id="vendor-table">
                        <thead>
                            <tr>
                                <th class="all">
                                    名称
                                </th>
                                <th class="all">
                                    备注
                                </th>
                                <th class="all">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <vendor-table v-for="item in entity" v-bind:row="item"></vendor-table>
                            <tr v-for="data in entity">
                                <td>
                                    {{ data.Name }}
                                </td>
                                <td>
                                    {{ data.Description }}
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="#" data-target="#ajax-modal" data-toggle="modal"> 查看 </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <hr />
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            hyperion.leftNavActive($('#menu-vendorinfo-list'));
            hyperion.initDatatable($('#vendor-table'), false);
        });
    </script>

    <script type="text/javascript">
        Vue.component('vendor-table', {
            props: ['row'],
            template: '<tr><td>{{ row.Name }}</td><td>{{ row.Description }}</td></tr>'
        })

        var vendorApp = new Vue({
            el: '#vendor-app',
            data: {
                entity: []
            },
            created: function () {
                var vm = this;
                axios.get('/api/vendorinfo/')
                    .then(function (response) {
                        console.log(response);
                        vm.entity = response.data;
                    });
            }
        });
    </script>
}